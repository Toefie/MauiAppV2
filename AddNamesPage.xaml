<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.AddNamesPage"
             Title="Add Names">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Add Player Names" FontSize="24" HorizontalOptions="Center" />
        <Entry Placeholder="Name 1" />
        <Entry Placeholder="Name 2" />
        <Entry Placeholder="Name 3" />
        <Button Text="Submit" Clicked="OnSubmitClicked" />
        <Button Text="Back" Clicked="OnBackClicked" />
    </VerticalStackLayout>
</ContentPage>