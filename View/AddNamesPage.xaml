<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.AddNamesPage"
             Title="Add Names">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Add Names for the Game" FontSize="24" HorizontalOptions="Center" />
        <Entry Placeholder="Player Name 1" />
        <Entry Placeholder="Player Name 2" />
        <Entry Placeholder="Player Name 3" />
        <Entry Placeholder="Player Name 4" />
        <Button Text="Start Game" Clicked="OnStartGameClicked" />  
        <Button Text="Back" Clicked="OnBackClicked" />
    </VerticalStackLayout>
</ContentPage>