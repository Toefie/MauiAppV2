<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.HomePage"
             Title="Home">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Welcome to Truth or Drink!" FontSize="24" HorizontalOptions="Center" />

        <!-- Button to Start Game -->
        <Button Text="Start Game" Clicked="OnStartGameClicked" />

        <!-- Button to Add Question -->
        <Button Text="Add Question" Clicked="OnAddQuestionClicked" />

        <!-- Button to Navigate to Settings -->
        <Button Text="Settings" Clicked="OnSettingsClicked" />

        <!-- Button to Navigate to Scoreboard -->
        <Button Text="Scoreboard" Clicked="OnScoreboardClicked" />
    </VerticalStackLayout>
</ContentPage>