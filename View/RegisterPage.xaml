<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.RegisterPage"
             Title="Register">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Register New Account" FontSize="24" HorizontalOptions="Center" />
        <Entry Placeholder="Name" />
        <Entry Placeholder="Email" Keyboard="Email" />
        <Entry Placeholder="Password" IsPassword="True" />
        <Button Text="Submit" Clicked="OnSubmitClicked" />
        <Button Text="Back to Login" Clicked="OnBackToLoginClicked" />
    </VerticalStackLayout>
</ContentPage>