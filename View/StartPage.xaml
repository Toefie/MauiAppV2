<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.StartPage"
             Title="Start Game">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Game Menu" FontSize="24" HorizontalOptions="Center" />
        <Button Text="Add Names" Clicked="OnAddNamesClicked" />
        <Button Text="Add Question" Clicked="OnAddQuestionClicked" />
        <Button Text="Back to Home" Clicked="OnBackClicked" />
        <Button Text="Start Game" Clicked="OnStartGameClicked" />
    </VerticalStackLayout>
</ContentPage>