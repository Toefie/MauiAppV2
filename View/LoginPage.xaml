<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.LoginPage"
             Title="Login">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Truth or Drink" FontSize="24" HorizontalOptions="Center" />
        <Entry Placeholder="Name" x:Name="NameEntry" />
        <Entry Placeholder="Password" IsPassword="True" x:Name="PasswordEntry" />
        <Button Text="Login" Clicked="OnLoginClicked" />
        <Button Text="Register" Clicked="OnRegisterClicked" />
    </VerticalStackLayout>
</ContentPage>